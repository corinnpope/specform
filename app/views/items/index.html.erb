


<div class="row">
  <div class="col-sm-6">
    <h1>My Specs</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_item_path, class: 'btn btn-primary' do %>
    Add New Item
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            <th>Release Date</th>
            <th>Epic</th>
            <th>Status</th>
            <th>Owner</th>
            <th>PDF</th>
            
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <%= content_tag :tr, id: dom_id(item), class: dom_class(item) do %>
          <td><%= link_to item.name, item %></td>
          <td><%= item.description %></td>
          <td><%= item.release_date %></td>
          <td><%= item.epic %></td>
          <td><%= item.status %></td>
          <td><%= item.owner %></td>         
          <td> 
            <%= link_to item_path(item, format: :pdf), class: "btn btn-secondary", title: "Download PDF Version" do %>
              <i class="far fa-file-pdf"></i> Download PDF
            <% end %>
          </td>          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
